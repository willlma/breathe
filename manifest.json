{
  "background": {
    "service_worker": "src/chrome.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["./src/browser-polyfill.js", "./src/content.js"],
      "run_at": "document_start"
    }
  ],
  "description": "Pause and take a breath. Waste less time on the web.",
  "icons": {
    "48": "src/assets/take-a-breath48.png",
    "128": "src/assets/take-a-breath128.png"
  },
  "manifest_version": 3,
  "name": "Take a breath",
  "options_ui": {
    "page": "src/settings/index.html"
  },
  "permissions": ["storage", "alarms"],
  "version": "0.16",
  "web_accessible_resources": [
    {
      "resources": ["src/assets/circle-rope.gif", "src/form.html", "src/cheat-day.html"],
      "matches": ["*://*/*"]
    }
  ]
}
