{
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["./src/browser-polyfill.js", "./src/content.js"],
      "run_at": "document_start"
    }
  ],
  "description": "Pause to take a breath to waste less time on the web.",
  "icons": {
    "48": "src/assets/take-a-breath48.png",
    "128": "src/assets/take-a-breath128.png"
  },
  "manifest_version": 2,
  "name": "Take a Breath",
  "options_ui": {
    "page": "src/settings/index.html"
  },
  "permissions": ["storage", "alarms"],
  "version": "0.16",
  "web_accessible_resources": ["src/assets/breathe.gif"]
}
