{
  "background": {
    "service_worker": "src/chrome.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "./src/browser-polyfill.js",
        "./src/breathe.js"
      ],
      "css": [
        "./src/breathe.css"
      ],
      "run_at": "document_start"
    }
  ],
  "description": "Do breathing exercises and improve eyesight instead of wasting time on the web.",
  "icons": {
    "48": "src/assets/breathe48.png",
    "128": "src/assets/breathe128.png"
  },
  "manifest_version": 3,
  "name": "Breathe",
  "options_ui": {
    "page": "src/settings/index.html"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "version": "0.13",
  "web_accessible_resources": [
    {
      "resources": [
        "src/assets/breathe.gif",
        "src/breathe.html",
        "src/cheat-day.html"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ]
}
