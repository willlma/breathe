{
  "background": { "scripts": ["browser-polyfill.js", "background.js"] },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["./browser-polyfill.js", "./breathe.js"],
      "css": ["./breathe.css"],
      "run_at": "document_start"
    }
  ],
  "description": "Do breathing exercises and improve eyesight instead of wasting time on the web.",
  "icons": {
    "48": "breathe48.png",
    "128": "breathe128.png"
  },
  "manifest_version": 2,
  "name": "Breathe",
  "options_ui": { "page": "settings/index.html" },
  "permissions": ["storage", "tabs"],
  "version": "0.6",
  "web_accessible_resources": ["assets/breathe.gif"]
}
